                strWhere = BuildFields(" ", Con1, Con2, Con3)
                strSelFields = "SUBSTR(A.CREDAY,1,6) CREDAY,"
                strSelFields = strSelFields & "A.JOBYEARMON||'-'||A.JOBCUST||'-'||TO_CHAR(A.JOBSEQ) JOBNO,A.JOBNAME,B.DEMANDAMT,"
