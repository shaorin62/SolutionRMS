                strFormet = strFormet & " LEFT JOIN (SELECT WOCODE,SUM(DIVAMT) DIVAMT FROM PD_GROUP_DIVAMT GROUP BY WOCODE) C "
                strFormet = strFormet & " ON B.JOBYEARMON||'-'||B.JOBCUST||'-'||TO_CHAR(B.JOBSEQ) = C.WOCODE "
                strFormet = strFormet & " WHERE A.JOBYEARMON = B.JOBYEARMON AND A.JOBCUST = B.JOBCUST AND A.JOBSEQ = B.JOBSEQ "
                strFormet = strFormet & " AND A.GROUPGBN = '1' "
