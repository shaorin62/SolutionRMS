    '최초 상단의 청약 내용 조회
    Public Function SelectRtn(ByVal strInfoXML As String, _
                              ByRef intRowCnt As Integer, _
                              ByRef intColCnt As Integer, _
                              ByVal strYEARMON As String, _
                              ByVal strCLIENTCODE As String, _
                              ByVal strCLIENTNAME As String, _
                              ByVal strCONT_CODE As String, _
                              ByVal strCONT_NAME As String) As Object     'XML  데이터 조회시

        Dim strSQL As String
        Dim strFormet, strWhere As String
        Dim Con1, Con2, Con3, Con4, Con5 As String
        Dim vntData As Object

        With mobjSCGLConfig
            Try
                SetConfig(strInfoXML)   '기본정보 설정

                Con1 = "" : Con2 = "" : Con3 = "" : Con4 = "" : Con5 = ""

                If strYEARMON <> "" Then Con1 = String.Format(" AND (A.YEARMON = '{0}')", strYEARMON)
                If strCLIENTCODE <> "" Then Con2 = String.Format(" AND (CLIENTCODE = '{0}')", strCLIENTCODE)
                If strCONT_CODE <> "" Then Con3 = String.Format(" AND (DBO.SC_GET_HIGHCUSTNAME_FUN(CLIENTCODE) LIKE '%{0}%')", strCLIENTNAME)
                If strCONT_CODE <> "" Then Con4 = String.Format(" AND (CONT_CODE = '{0}')", strCONT_CODE)
                If strCONT_NAME <> "" Then Con5 = String.Format(" AND (CONT_NAME LIKE '%{0}%')", strCONT_NAME)

                strWhere = BuildFields(" ", Con1, Con2, Con3, Con4, Con5)

                strFormet = strFormet & " SELECT"
                strFormet = strFormet & " CHK, CONFIRMGBN,GBN, YEARMON, SEQ, CONT_CODE, CONT_NAME,CLIENTCODE,"
                strFormet = strFormet & " CLIENTNAME,DEPT_NAME,AMT ALL_AMT,EXCLIENTCODE,EXCLIENTNAME,"
                strFormet = strFormet & " AMT, MC_AMT, EX_AMT , CUSTNAME, MEMO"
                strFormet = strFormet & " FROM"
                strFormet = strFormet & " ("
                strFormet = strFormet & " 	SELECT"
                strFormet = strFormet & " 	0 CHK , "
                strFormet = strFormet & " 	CASE ISNULL(A.CONFIRM_USER,'') WHEN '' THEN '미확정' ELSE '확정' END CONFIRMGBN,"
                strFormet = strFormet & " 	'청약' GBN,"
                strFormet = strFormet & " 	A.YEARMON , A.SEQ, "
                strFormet = strFormet & " 	A.CONT_CODE , B.CONT_NAME ,"
                strFormet = strFormet & " 	A.CLIENTCODE CLIENTCODE,"
                strFormet = strFormet & " 	DBO.SC_GET_HIGHCUSTNAME_FUN(A.CLIENTCODE) CLIENTNAME,"
                strFormet = strFormet & " 	DBO.SC_DEPT_NAME_FUN(A.DEPT_CD) DEPT_NAME,"
                strFormet = strFormet & " 	DBO.SC_GET_HIGHCUSTNAME_FUN(A.CLIENTCODE) CUSTNAME,"
                strFormet = strFormet & " 	A.EXCLIENTCODE,"
                strFormet = strFormet & " 	DBO.SC_GET_HIGHCUSTNAME_FUN(A.EXCLIENTCODE) EXCLIENTNAME,"
                strFormet = strFormet & " 	ISNULL(A.AMT,0) AMT,"
                strFormet = strFormet & " 	ISNULL(A.MC_AMT,0) MC_AMT,"
                strFormet = strFormet & " 	ISNULL(A.EX_AMT,0) EX_AMT,"
                strFormet = strFormet & " 	A.MEMO, 1 SORTGBN"
                strFormet = strFormet & " 	FROM MD_IFCMALL_AMT A LEFT JOIN "
                strFormet = strFormet & " 	MD_IFCMALL_CONTRACT B  ON A.CONT_CODE = B.CONT_CODE AND A.CLIENTCODE = B.CLIENTCODE"
                strFormet = strFormet & " 	UNION ALL"
                strFormet = strFormet & " 	SELECT 0 CHK,"
                strFormet = strFormet & " 	CASE ISNULL(A.CONFIRM_USER,'') WHEN '' THEN '미확정' ELSE '확정' END CONFIRMGBN,"
                strFormet = strFormet & " 	'대행분배' GBN,"
                strFormet = strFormet & " 	A.YEARMON,A.SEQ,A.CONT_CODE,B.CONT_NAME,"
                strFormet = strFormet & " 	B.CLIENTCODE CLIENTCODE,"
                strFormet = strFormet & " 	DBO.SC_GET_HIGHCUSTNAME_FUN(B.CLIENTCODE) CLIENTNAME,"
                strFormet = strFormet & " 	DBO.SC_DEPT_NAME_FUN(A.DEPT_CD) DEPT_NAME,"
                strFormet = strFormet & " 	'' CUSTNAME,"
                strFormet = strFormet & " 	A.EXCLIENTCODE,"
                strFormet = strFormet & "   case len(A.EXCLIENTCODE) when '6' then DBO.SC_GET_HIGHCUSTNAME_FUN(A.EXCLIENTCODE) "
                strFormet = strFormet & "   else"
                strFormet = strFormet & "   DBO.SC_DEPT_NAME_FUN(A.EXCLIENTCODE)"
                strFormet = strFormet & "   end EXCLIENTNAME,"
                strFormet = strFormet & " 	0 AMT, "
                strFormet = strFormet & " 	0 MC_AMT,"
                strFormet = strFormet & " 	ISNULL(A.AMT,0) EX_AMT,"
                strFormet = strFormet & " 	A.MEMO, 2 SORTGBN"
                strFormet = strFormet & " 	FROM MD_IFCMALL_OUT A LEFT JOIN"
                strFormet = strFormet & " 	MD_IFCMALL_CONTRACT B ON A.CONT_CODE = B.CONT_CODE"
                strFormet = strFormet & " 	UNION ALL"
                strFormet = strFormet & " 	SELECT 0 CHK,"
                strFormet = strFormet & " 	CASE ISNULL(A.CONFIRM_USER,'') WHEN '' THEN '미확정' ELSE '확정' END CONFIRMGBN,"
                strFormet = strFormet & " 	'커미션' GBN, "
                strFormet = strFormet & " 	A.YEARMON, A.SEQ,A.CONT_CODE, B.CONT_NAME,"
                strFormet = strFormet & " 	B.CLIENTCODE CLIENTCODE,"
                strFormet = strFormet & " 	DBO.SC_GET_HIGHCUSTNAME_FUN(B.CLIENTCODE) CLIENTNAME,"
                strFormet = strFormet & " 	DBO.SC_DEPT_NAME_FUN(A.DEPT_CD) DEPT_NAME,"
                strFormet = strFormet & " 	'' CUSTNAME,"
                strFormet = strFormet & " 	A.EXCLIENTCODE,"
                strFormet = strFormet & " 	DBO.SC_GET_HIGHCUSTNAME_FUN(A.EXCLIENTCODE) EXCLIENTNAME,"
                strFormet = strFormet & " 	0 AMT, "
                strFormet = strFormet & " 	0 MC_AMT,"
                strFormet = strFormet & " 	ISNULL(A.SUSU_AMT,0) EX_AMT,"
                strFormet = strFormet & " 	A.MEMO, 3 SORTGBN"
                strFormet = strFormet & " 	FROM MD_IFCMALL_SUSU A LEFT JOIN "
                strFormet = strFormet & " 	MD_IFCMALL_CONTRACT B ON A.CONT_CODE = B.CONT_CODE "
                strFormet = strFormet & " 	UNION ALL"
                strFormet = strFormet & " 	SELECT 0 CHK,"
                strFormet = strFormet & " 	CASE ISNULL(A.CONFIRM_USER,'') WHEN '' THEN '미확정' ELSE '확정' END CONFIRMGBN,"
                strFormet = strFormet & " 	'EOM_LIVE' GBN, "
                strFormet = strFormet & " 	A.YEARMON, A.SEQ,A.CONT_CODE, B.CONT_NAME,"
                strFormet = strFormet & " 	B.CLIENTCODE CLIENTCODE,"
                strFormet = strFormet & " 	DBO.SC_GET_HIGHCUSTNAME_FUN(B.CLIENTCODE) CLIENTNAME,"
                strFormet = strFormet & " 	DBO.SC_DEPT_NAME_FUN(A.DEPT_CD) DEPT_NAME,"
                strFormet = strFormet & " 	'' CUSTNAME,"
                strFormet = strFormet & " 	A.EXCLIENTCODE,"
                strFormet = strFormet & " 	DBO.SC_GET_HIGHCUSTNAME_FUN(A.EXCLIENTCODE) EXCLIENTNAME,"
                strFormet = strFormet & " 	0 AMT, "
                strFormet = strFormet & " 	0 MC_AMT,"
                strFormet = strFormet & " 	ISNULL(A.SUSU_AMT,0) EX_AMT,"
                strFormet = strFormet & " 	A.MEMO, 4 SORTGBN"
                strFormet = strFormet & " 	FROM MD_IFCMALL_EOM A LEFT JOIN "
                strFormet = strFormet & " 	MD_IFCMALL_CONTRACT B ON A.CONT_CODE = B.CONT_CODE "
                strFormet = strFormet & " )A"
                strFormet = strFormet & " WHERE 1=1"
                strFormet = strFormet & " {0} "
                strFormet = strFormet & " order by cont_code, SORTGBN"

                strSQL = String.Format(strFormet, strWhere)

                .mobjSCGLSql.SQLConnect(.DBConnStr)
                vntData = .mobjSCGLSql.SQLSelectArr(strSQL, intRowCnt, intColCnt, , True)
                Return vntData
            Catch err As Exception
                Throw RaiseSysErr(err, CLASS_NAME & ".SelectRtn")
            Finally
                .mobjSCGLSql.SQLDisconnect()
            End Try
        End With
    End Function

    ' 청약데이터 확정 
    Public Function ProcessRtn(ByVal strInfoXML As String, _
                               ByVal vntData As Object, _
                               ByVal strUSER As String, _
                               ByVal strFLAG As String) As String

        Dim intRtn As Integer '결과값 변수  
        Dim i, intColCnt, intRows As Integer '루프, 컬럼Cnt, 로우Cnt 변수

        SetConfig(strInfoXML) '기본정보 Setting

        With mobjSCGLConfig '기본정보를 가지고 있는 Config 개체
            Try
                'DB접속 및 트랜잭션 시작
                .mobjSCGLSql.SQLConnect(.DBConnStr)
                .mobjSCGLSql.SQLBeginTrans()

                '확정 미확정 데이터 처리
                If IsArray(vntData) Then
                    intRtn = ProcessRtn_Confirm(vntData, strUSER, strFLAG)
                End If

                '트랜잭션Commit
                .mobjSCGLSql.SQLCommitTrans()
                Return intRtn
            Catch err As Exception
                '트랜잭션RollBack 및 오류 전송
                .mobjSCGLSql.SQLRollbackTrans()
                Throw RaiseSysErr(err, CLASS_NAME & ".ProcessRtn")
            Finally
                'Resource해제
                .mobjSCGLSql.SQLDisconnect()
            End Try
        End With
    End Function

    '============== 청약 데이터 확정/ 확정 취소
    Public Function ProcessRtn_Confirm(ByVal vntData As Object, _
                                       ByVal strUSER As String, _
                                       ByVal strFLAG As String) As String

        Dim intRtn As Integer
        Dim i, intColCnt, intRows As Integer
        Dim strYEARMON, dblSEQ, strGBN, strCONT_CODE

        With mobjSCGLConfig
            Try
                If IsArray(vntData) Then
                    '''사용할 Entity 개체생성(Config 정보를 넘겨생성)

                    mobjceMD_IFCMALL_AMT = New ceMD_IFCMALL_AMT(mobjSCGLConfig)
                    mobjceMD_IFCMALL_OUT = New ceMD_IFCMALL_OUT(mobjSCGLConfig)
                    mobjceMD_IFCMALL_SUSU = New ceMD_IFCMALL_SUSU(mobjSCGLConfig)
                    mobjceMD_IFCMALL_EOM = New ceMD_IFCMALL_EOM(mobjSCGLConfig)

                    '''vntData의 컬럼수, 로우수를 변수입력
                    intColCnt = UBound(vntData, 1) : intRows = UBound(vntData, 2)
                    '''해당하는Row 만큼 Loop

                    For i = 1 To intRows
                        '청약 내역 확정
                        If strFLAG = "CONFIRM" Then
                            If GetElement(vntData, "CHK", intColCnt, i, OPTIONAL_STR) = "1" And GetElement(vntData, "CONFIRMGBN", intColCnt, i, OPTIONAL_STR) = "미확정" Then
                                strYEARMON = GetElement(vntData, "YEARMON", intColCnt, i, OPTIONAL_STR)
                                dblSEQ = GetElement(vntData, "SEQ", intColCnt, i, OPTIONAL_NUM)
                                strCONT_CODE = GetElement(vntData, "CONT_CODE", intColCnt, i, OPTIONAL_STR)
                                strGBN = GetElement(vntData, "GBN", intColCnt, i, OPTIONAL_STR)

                                If strGBN = "청약" Then
                                    intRtn = mobjceMD_IFCMALL_AMT.Update_confirm(strYEARMON, dblSEQ, strCONT_CODE, strUSER)
                                ElseIf strGBN = "대행분배" Then
                                    intRtn = mobjceMD_IFCMALL_OUT.Update_confirm(strYEARMON, dblSEQ, strCONT_CODE, strUSER)
                                ElseIf strGBN = "커미션" Then
                                    intRtn = mobjceMD_IFCMALL_SUSU.Update_confirm(strYEARMON, dblSEQ, strCONT_CODE, strUSER)
                                ElseIf strGBN = "EOM_LIVE" Then
                                    intRtn = mobjceMD_IFCMALL_EOM.Update_confirm(strYEARMON, dblSEQ, strCONT_CODE, strUSER)
                                End If
                            End If
                            '청약내역 확정취소
                        ElseIf strFLAG = "CANCEL" Then
                            If GetElement(vntData, "CHK", intColCnt, i, OPTIONAL_STR) = "1" And GetElement(vntData, "CONFIRMGBN", intColCnt, i, OPTIONAL_STR) = "확정" Then
                                strYEARMON = GetElement(vntData, "YEARMON", intColCnt, i, OPTIONAL_STR)
                                dblSEQ = GetElement(vntData, "SEQ", intColCnt, i, OPTIONAL_NUM)
                                strCONT_CODE = GetElement(vntData, "CONT_CODE", intColCnt, i, OPTIONAL_STR)
                                strGBN = GetElement(vntData, "GBN", intColCnt, i, OPTIONAL_STR)

                                If strGBN = "청약" Then
                                    intRtn = mobjceMD_IFCMALL_AMT.Update_confirmcancel(strYEARMON, dblSEQ, strCONT_CODE)
                                ElseIf strGBN = "대행분배" Then
                                    intRtn = mobjceMD_IFCMALL_OUT.Update_confirmcancel(strYEARMON, dblSEQ, strCONT_CODE)
                                ElseIf strGBN = "커미션" Then
                                    intRtn = mobjceMD_IFCMALL_SUSU.Update_confirmcancel(strYEARMON, dblSEQ, strCONT_CODE)
                                ElseIf strGBN = "EOM_LIVE" Then
                                    intRtn = mobjceMD_IFCMALL_EOM.Update_confirmcancel(strYEARMON, dblSEQ, strCONT_CODE)
                                End If
                            End If
                        End If
                    Next
                End If

                Return intRows
            Catch err As Exception
                Throw RaiseSysErr(err, CLASS_NAME & ".ProcessRtn_Confirm")
            Finally
                mobjceMD_IFCMALL_AMT.Dispose()
                mobjceMD_IFCMALL_SUSU.Dispose()
                mobjceMD_IFCMALL_OUT.Dispose()
                mobjceMD_IFCMALL_EOM.Dispose()
            End Try
        End With
    End Function

