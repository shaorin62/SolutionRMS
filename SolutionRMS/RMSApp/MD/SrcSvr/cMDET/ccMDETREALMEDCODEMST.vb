    Public Function ProcessRtn_Client(ByVal strInfoXML As String, _
                                      ByVal vntData As Object, _
                                      ByVal strGUBUN As String) As Integer
        Dim intRtn As Integer
        Dim i, intColCnt, intRows As Integer
        Dim strKOBACOCUSTCODE As String
        Dim strSBSCUSTCODE As String
        Dim strHIGHCUSTCODE As String

        SetConfig(strInfoXML)
        With mobjSCGLConfig
            Try
                .mobjSCGLSql.SQLConnect(.DBConnStr)
                .mobjSCGLSql.SQLBeginTrans()

                If IsArray(vntData) Then
                    mobjceSC_CUST_HDR = New ceSC_CUST_HDR(mobjSCGLConfig)
                    '''vntData의 컬럼수, 로우수를 변수입력
                    intColCnt = UBound(vntData, 1) : intRows = UBound(vntData, 2)
                    '''해당하는Row 만큼 Loop
                    strKOBACOCUSTCODE = ""
                    strHIGHCUSTCODE = ""
                    strSBSCUSTCODE = ""
                    For i = 1 To intRows
                        If strGUBUN = "KOBACO" Then
                            strKOBACOCUSTCODE = GetElement(vntData, "KOBACOCUSTCODE", intColCnt, i)
                            strHIGHCUSTCODE = GetElement(vntData, "HIGHCUSTCODE", intColCnt, i)

                            intRtn = mobjceSC_CUST_HDR.UpdateRtn_KOBACOCUSTCODE(strKOBACOCUSTCODE, strHIGHCUSTCODE)
                        Else
                            strSBSCUSTCODE = GetElement(vntData, "SBSCUSTCODE", intColCnt, i)
                            strHIGHCUSTCODE = GetElement(vntData, "HIGHCUSTCODE", intColCnt, i)

                            intRtn = mobjceSC_CUST_HDR.UpdateRtn_SBSCUSTCODE(strSBSCUSTCODE, strHIGHCUSTCODE)

                        End If
                    Next
                End If
                .mobjSCGLSql.SQLCommitTrans()
                Return intRows
            Catch err As Exception
                .mobjSCGLSql.SQLRollbackTrans()
                Throw RaiseSysErr(err, CLASS_NAME & ".ProcessRtn_Client")
            Finally
                .mobjSCGLSql.SQLDisconnect()
                mobjceSC_CUST_HDR.Dispose()
            End Try
        End With
    End Function

    '============== 코바코 매체코드 등록 저장
    Public Function ProcessRtn(ByVal strInfoXML As String, _
                               ByVal vntData As Object, _
                               ByVal strGUBUN As String) As Integer

        Dim intRtn As Integer
        Dim i, intColCnt, intRows As Integer
        Dim dblID As Double '자동 ID 를사용할 때만 사용
        Dim strBCODE As String
        Dim strCUSTCODE As String
        Dim strBRODCODE As String
        Dim strMEDIUMCODE As String
        Dim strOFFICECODE As String
        Dim strGBN As String

        SetConfig(strInfoXML)
        With mobjSCGLConfig
            Try
                .mobjSCGLSql.SQLConnect(.DBConnStr)
                .mobjSCGLSql.SQLBeginTrans()

                If IsArray(vntData) Then
                    '''사용할 Entity 개체생성(Config 정보를 넘겨생성)
                    mobjceMDCOREALMEDCODEMST = New ceSC_REALMEDCODE_MST(mobjSCGLConfig)
                    mobjceSC_CUST_HDR = New ceSC_CUST_HDR(mobjSCGLConfig)
                    mobjceSC_CUST_DTL = New ceSC_CUST_DTL(mobjSCGLConfig)
                    '''vntData의 컬럼수, 로우수를 변수입력
                    intColCnt = UBound(vntData, 1) : intRows = UBound(vntData, 2)
                    '''해당하는Row 만큼 Loop
                    For i = 1 To intRows
                        strBCODE = ""
                        strCUSTCODE = ""

                        If strGUBUN = "KOBACO" Then
                            strGBN = ""
                        Else
                            strGBN = "SBS"
                        End If
                        '신규일때
                        If GetElement(vntData, "BCODE", intColCnt, i, OPTIONAL_STR) = "" Then
                            strBRODCODE = GetElement(vntData, "BRODCODE", intColCnt, i)
                            strMEDIUMCODE = GetElement(vntData, "MEDIUMCODE", intColCnt, i)
                            strOFFICECODE = GetElement(vntData, "OFFICECODE", intColCnt, i)
                            strBCODE = strBRODCODE + strMEDIUMCODE + strOFFICECODE
                            intRtn = InsertRtn_MST(vntData, intColCnt, i, strBCODE, strGBN)

                            intRtn = mobjceSC_CUST_DTL.UpdateRtn_CUSTCODE(strBCODE, strCUSTCODE, strGUBUN)
                        Else
                            '업데이트일때
                            strBCODE = GetElement(vntData, "BCODE", intColCnt, i)
                            strCUSTCODE = GetElement(vntData, "CUSTCODE", intColCnt, i)
                            intRtn = UpdateRtn_MST(vntData, intColCnt, i, strGBN)

                            intRtn = mobjceSC_CUST_DTL.UpdateRtn_CUSTCODE(strBCODE, strCUSTCODE, strGUBUN)
                        End If
                    Next
                End If
                .mobjSCGLSql.SQLCommitTrans()
                Return intRows
            Catch err As Exception
                .mobjSCGLSql.SQLRollbackTrans()
                Throw RaiseSysErr(err, CLASS_NAME & ".ProcessRtn")
            Finally
                .mobjSCGLSql.SQLDisconnect()
                mobjceMDCOREALMEDCODEMST.Dispose()
                mobjceSC_CUST_HDR.Dispose()
                mobjceSC_CUST_DTL.Dispose()
            End Try
        End With
    End Function

