        SetConfig(strInfoXML)

        Con1 = ""
        Con2 = ""
        Con3 = ""

        If strTAXYEARMON <> "" Then Con1 = String.Format(" AND (TAXYEARMON = '{0}')", strTAXYEARMON)
        If strTAXNO <> "" Then Con2 = String.Format(" AND (TAXNO = '{0}')", strTAXNO)
        If strMEDFLAG = "B" Then
            Con3 = " AND (MEDFLAG =  'B' OR MEDFLAG = 'C')"
        Else
            Con3 = String.Format(" AND (MEDFLAG = '{0}')", strMEDFLAG)
        End If
        strCols = " TAXYEARMON,"
        strCols = strCols & " TAXNO,"
        strCols = strCols & " DBO.SC_GET_HIGHCUSTNAME_FUN(CLIENTCODE) CLIENTNAME,"
        strCols = strCols & " DBO.MD_GET_REALMEDCODE_FUN(REAL_MED_CODE) REAL_MED_NAME,"
        strCols = strCols & " DBO.SC_DEPT_NAME_FUN(DEPTCODE) DEPTNAME,"
        strCols = strCols & " SUMAMT AMT,"
        strCols = strCols & " VAT,"
        strCols = strCols & " SUMAMT+VAT SUMAMT,"
        strCols = strCols & " CLIENTBISNO,"
        strCols = strCols & " REAL_MED_BISNO,"
        strCols = strCols & " DEMANDDAY,"
        strCols = strCols & " SUMM,"
        strCols = strCols & " VOCHNO,"
        strCols = strCols & " PRINTDAY,"
        strCols = strCols & " CLIENTCODE,"
        strCols = strCols & " REAL_MED_CODE,"
