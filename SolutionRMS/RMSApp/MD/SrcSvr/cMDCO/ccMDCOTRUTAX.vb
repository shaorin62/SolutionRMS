        strCols = strCols & " REAL_MED_ACCODE,"
        strCols = strCols & " DEPTCODE"
        strWhere = BuildFields(" ", Con1, Con2, Con3)
        strFormat = "SELECT {0} FROM MD_TRUTAX_HDR WHERE 1=1  {1}"
        '기본정보 Setting
        With mobjSCGLConfig '기본정보 Config 개체
            strSQL = String.Format(strFormat, strCols, strWhere)
            Try
