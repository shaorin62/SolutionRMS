    Public Function ProcessRtn_SUMM(ByVal strInfoXML As String, _
                                    ByVal strTAXYEARMON As String, _
                                    ByVal intTAXNO As Integer, _
                                    ByVal strSUMM As String, _
                                    ByVal strVAT As Double) As Integer
