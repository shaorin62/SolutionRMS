            strFormat = strFormat & "    		max(taxnoseq) taxnoseq"
            strFormat = strFormat & "    		FROM"
            strFormat = strFormat & "    		MD_COMMITAX_DTL"
            strFormat = strFormat & "    		WHERE 1=1 AND ISNULL(ATTR10,0) <> 999999"
            strFormat = strFormat & "    		" & Con1
            strFormat = strFormat & "    		" & strDEFMEDFLAG
            strFormat = strFormat & "    		GROUP BY TAXYEARMON, TAXNO"
            strFormat = strFormat & "    	) a left join MD_COMMITAX_DTL b"
            strFormat = strFormat & "    	on a.taxyearmon = b.taxyearmon"
            strFormat = strFormat & "    	and  a.taxno = b.taxno"
            strFormat = strFormat & "    	and a.taxnoseq = b.taxnoseq"
            strFormat = strFormat & "    ) data1"
            strFormat = strFormat & "    on MAIN.taxyearmon = data1.taxyearmon and  MAIN.taxno = data1.taxno"

            strSQL = strFormat

