            strFormat = strFormat & "    data2.TAXYEARMON,"
            strFormat = strFormat & "    data2.TAXNO,"
            strFormat = strFormat & "    REAL_MED_NAME,"
            strFormat = strFormat & "    CASE WHEN DBO.MD_GET_MEDCODECNT_FUN(data2.TAXYEARMON, data2.TAXNO) > 1"
