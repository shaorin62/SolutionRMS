            strFormat = strFormat & "    	" & Con1
            strFormat = strFormat & "    	" & strDEFMEDFLAG
            strFormat = strFormat & "    ) data2 ON MAIN.TAXYEARMON = data2.TAXYEARMON AND MAIN.TAXNO = data2.TAXNO"
            strFormat = strFormat & "    Left Join     "
            strFormat = strFormat & "    (        "
