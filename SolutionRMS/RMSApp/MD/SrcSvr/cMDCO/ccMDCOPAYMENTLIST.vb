            strFormat = strFormat & "    AMT,"
            strFormat = strFormat & "    VAT,"
            strFormat = strFormat & "    SUMAMTVAT,"
            strFormat = strFormat & "    SUMM,"
            strFormat = strFormat & "    DEMANDDAY "
            strFormat = strFormat & "    from "
            strFormat = strFormat & "    ("
