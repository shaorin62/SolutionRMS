    Public Function SelectRtn_FDATE(ByVal strInfoXML As String, _
                                    ByRef intRowCnt As Integer, _
                                    ByRef intColCnt As Integer, _
                                    ByVal strFDATE As String, _
                                    ByVal strEXCLIENTCODE As String) As String

        Dim strSQL, strFormat, strRtn As String

        SetConfig(strInfoXML)   '기본정보 설정

        With mobjSCGLConfig

            If strFDATE <> "" Then strFDATE = Mid(strFDATE, 1, 4) & Mid(strFDATE, 6, 2) & Mid(strFDATE, 9, 2)

            '데이터 조회
            Try
                strSQL = " SELECT "
                strSQL = strSQL & " CONVERT(VARCHAR(30),DATEADD(dd,1,MAX(EDATE)),112) "
                strSQL = strSQL & " FROM SC_EXRATE_MST "
                strSQL = strSQL & " WHERE EXCLIENTCODE = '" & strEXCLIENTCODE & "' "
                strSQL = strSQL & " AND EDATE >= '" & strFDATE & "'"

                .mobjSCGLSql.SQLConnect(.DBConnStr)
                strRtn = .mobjSCGLSql.SQLSelectOneScalar(strSQL)

                Return strRtn
            Catch err As Exception
                Throw RaiseSysErr(err, CLASS_NAME & ".SelectRtn_FDATE")
            Finally
                .mobjSCGLSql.SQLDisconnect()
            End Try
        End With
    End Function

