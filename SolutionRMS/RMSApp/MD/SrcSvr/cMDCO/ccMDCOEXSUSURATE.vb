    Public Function SelectRtn_EXCLIENT(ByVal strInfoXML As String, _
                                       ByRef intRowCnt As Integer, ByRef intColCnt As Integer, _
                                       ByVal strEXCLIENTCODE As String, _
                                       ByVal strEXCLIENTNAME As String) As Object

        Dim strSQL, strFormat, strWhere, strSelFields, strKeys As String
        Dim vntData As Object
        Dim Con1 As String
        Dim Con2 As String

        With mobjSCGLConfig
            Try
                SetConfig(strInfoXML)   '기본정보 설정

                Con1 = "" : Con2 = ""

                If strEXCLIENTCODE <> "" Then Con1 = String.Format(" AND (A.CUSTCODE = '{0}')", strEXCLIENTCODE)
                If strEXCLIENTNAME <> "" Then Con2 = String.Format(" AND (A.CUSTNAME LIKE '%{0}%')", strEXCLIENTNAME)

                strWhere = BuildFields(" ", Con1, Con2)

                strFormat = " SELECT "
                strFormat = strFormat & " A.CUSTCODE EXCLIENTCODE, "
                strFormat = strFormat & " DBO.SC_GET_HIGHCUSTNAME_FUN(A.CUSTCODE) EXCLIENTNAME,"
                strFormat = strFormat & " CASE ISNULL(B.EXCLIENTCODE,'') WHEN '' THEN '' ELSE 'AOR' END GBN"
                strFormat = strFormat & " FROM SC_CUST_DTL A LEFT JOIN "
                strFormat = strFormat & " 	("
                strFormat = strFormat & " 		SELECT "
                strFormat = strFormat & " 		EXCLIENTCODE"
                strFormat = strFormat & " 		FROM SC_EXRATE_MST"
                strFormat = strFormat & " 		GROUP BY EXCLIENTCODE"
                strFormat = strFormat & " 	)B ON A.CUSTCODE = B.EXCLIENTCODE "
                strFormat = strFormat & " WHERE A.MEDFLAG IN ('G') "
                strFormat = strFormat & " {0} "
                strFormat = strFormat & " ORDER BY GBN DESC "
                '데이터 조회

                strSQL = String.Format(strFormat, strWhere)

                .mobjSCGLSql.SQLConnect(.DBConnStr)
                vntData = .mobjSCGLSql.SQLSelectArr(strSQL, intRowCnt, intColCnt, , True)
                Return vntData
            Catch err As Exception
                Throw RaiseSysErr(err, CLASS_NAME & ".SelectRtn_EXCLIENT")
            Finally
                .mobjSCGLSql.SQLDisconnect()
            End Try
        End With
    End Function



