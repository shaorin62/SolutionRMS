        With mobjSCGLConfig '기본정보 Config 개체
            Try
                strSQL = "select '" & strYEAR & "' + DBO.LPAD(ISNULL(MAX(CAST(SUBSTRING(CAMPAIGN_CODE,3,LEN(CAMPAIGN_CODE)) AS NUMERIC(4,0))),0)+1,4,'0') From MD_INTERNET_CAMPAIGN "
                strRtn = .mobjSCGLSql.SQLSelectOneScalar(strSQL)
                Return strRtn
            Catch err As Exception
                ' 오류 전송
                Throw RaiseSysErr(err, CLASS_NAME & ".Get_NewSeqNo")
