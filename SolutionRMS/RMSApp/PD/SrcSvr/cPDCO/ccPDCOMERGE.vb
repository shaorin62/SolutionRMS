    '============== ProcessRtn_MERGE
    Public Function ProcessRtn_MERGE(ByVal strInfoXML As String, _
                                     ByVal vntData As Object) As String
        Dim intRtn, intRtn2 As Integer
        Dim i, intColCnt, intRows As Integer
        Dim strTAXYEARMON
        Dim strTAXNO
        Dim strTAXNOSEQ
        Dim strMEDFLAG

        SetConfig(strInfoXML) '기본정보 Setting
        With mobjSCGLConfig
            Try
                If IsArray(vntData) Then
                    '''사용할 Entity 개체생성(Config 정보를 넘겨생성)
                    mobjcePD_TAX_HDR = New cePD_TAX_HDR(mobjSCGLConfig)
                    '''vntData의 컬럼수, 로우수를 변수입력
                    intColCnt = UBound(vntData, 1) : intRows = UBound(vntData, 2)
                    '해당하는Row 만큼 Loop

                    For i = 1 To intRows
                        If GetElement(vntData, "CHK", intColCnt, i, OPTIONAL_STR) = "1" Then
                            strMEDFLAG = GetElement(vntData, "MEDFLAG", intColCnt, i, OPTIONAL_STR)

                            If strMEDFLAG = "P" Then
                                strTAXYEARMON = GetElement(vntData, "TAXYEARMON", intColCnt, i, OPTIONAL_STR)
                                strTAXNO = GetElement(vntData, "TAXNO", intColCnt, i, OPTIONAL_STR)

                                intRtn = mobjcePD_TAX_HDR.UpdateRtn_TAX_HDR_MERGE(strTAXYEARMON, strTAXNO)
                            End If
                        End If
                    Next
                End If

                Return intRows
            Catch err As Exception
                Throw RaiseSysErr(err, CLASS_NAME & ".ProcessRtn_MERGE")
            Finally
                mobjcePD_TAX_HDR.Dispose()
            End Try
        End With
    End Function



