    Public Function SelectRtn_CODE(ByVal strInfoXML As String, _
                                   ByRef intRowCnt As Integer, _
                                   ByRef intColCnt As Integer, _
                                   ByVal strCODE As String, _
                                   ByVal strCODENAME As String, _
                                   ByVal strUSE_YN As String, _
                                   ByVal strCLASSCODE As String) As Object

        Dim strCols As String         '컬럼변수
        Dim strWhere As String       'Where조건 변수
        Dim strFormet As String      'SQL Format 변수
        Dim strSQL As String          'SQL 변수
        Dim vntData As Object        'Array Return 변수(Array 를사용할 때 선언)
        Dim Con1, Con2, Con3, Con4
        With mobjSCGLConfig '기본정보 Config 개체
            Try
                SetConfig(strInfoXML) '기본정보 Setting

                Con1 = "" : Con2 = "" : Con3 = "" : Con4 = ""

                If strCODE <> "" Then Con1 = String.Format(" AND (CODE = '{0}')", strCODE)
                If strCODENAME <> "" Then Con2 = String.Format(" AND (CODE_NAME like '%{0}%')", strCODENAME)
                If strUSE_YN <> "" Then Con3 = String.Format(" AND (A.USE_YN = '{0}')", strUSE_YN)
                If strCLASSCODE <> "" Then Con4 = String.Format(" AND (A.CLASS_CODE = '{0}')", strCLASSCODE)

                strWhere = BuildFields(" ", Con1, Con2, Con3, Con4)

                strFormet = strFormet & "  SELECT "
                strFormet = strFormet & "  A.CLASS_CODE,"
                strFormet = strFormet & "  B.CLASSLNAME,"
                strFormet = strFormet & "  B.CLASSMNAME,"
                strFormet = strFormet & "  B.CLASSSNAME,"
                strFormet = strFormet & "  A.CODE,"
                strFormet = strFormet & "  A.CODE_NAME,"
                strFormet = strFormet & "  A.SORT_SEQ,"
                strFormet = strFormet & "  CASE A.USE_YN WHEN 'Y' THEN '사용' ELSE '미사용' END AS USE_YN,"
                strFormet = strFormet & "  CASE A.UPDATE_YN WHEN 'Y' THEN '수정가능' ELSE '수정불가' END AS UPDATE_YN"
                strFormet = strFormet & "  FROM SC_CODE A, SC_CLASS B"
                strFormet = strFormet & "  WHERE A.CLASS_CODE = B.CLASS {0}"

                strSQL = String.Format(strFormet, strWhere)

                ' DB 접속
                .mobjSCGLSql.SQLConnect(.DBConnStr)
                vntData = .mobjSCGLSql.SQLSelectArr(strSQL, intRowCnt, intColCnt, , True)

                Return vntData
            Catch err As Exception
                ' 오류 전송
                Throw RaiseSysErr(err, CLASS_NAME & ".SelectRtn_CODE")
            Finally
                ' DB 접속 종료
                .mobjSCGLSql.SQLDisconnect()
            End Try
        End With
    End Function

