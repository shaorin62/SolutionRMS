    Public Function ProcessRtn_CODE(ByVal strInfoXML As String, _
                                    ByVal vntData As Object) As Object

        Dim intRtn As Integer
        Dim i, intColCnt, intRows As Integer
        Dim strSEQ, strSEQ1
        Dim strYEARMON
        Dim strPUB_DATE, strDEMANDDAY
        Dim strUPDATE_YN
        Dim strUSE_YN

        SetConfig(strInfoXML)
        With mobjSCGLConfig
            Try
                .mobjSCGLSql.SQLConnect(.DBConnStr)
                .mobjSCGLSql.SQLBeginTrans()
                If IsArray(vntData) Then
                    '''사용할 Entity 개체생성(Config 정보를 넘겨생성)
                    mobjceSC_CODE = New ceSC_CODE(mobjSCGLConfig)
                    '''vntData의 컬럼수, 로우수를 변수입력
                    intColCnt = UBound(vntData, 1) : intRows = UBound(vntData, 2)
                    For i = 1 To intRows
                        strUSE_YN = ""
                        strUPDATE_YN = ""

                        If GetElement(vntData, "USE_YN", intColCnt, i, OPTIONAL_STR) = "사용" Then
                            strUSE_YN = "Y"
                        Else
                            strUSE_YN = "N"
                        End If

                        If GetElement(vntData, "UPDATE_YN", intColCnt, i, OPTIONAL_STR) = "수정가능" Then
                            strUPDATE_YN = "Y"
                        Else
                            strUPDATE_YN = "N"
                        End If

                        If GetElement(vntData, "FLAG", intColCnt, i) = "NEW" Then
                            intRtn = InsertRtn_CODE(vntData, intColCnt, i, strUSE_YN, strUPDATE_YN)
                        Else
                            intRtn = UpdateRtn_CODE(vntData, intColCnt, i, strUSE_YN, strUPDATE_YN)
                        End If
                    Next
                End If
                .mobjSCGLSql.SQLCommitTrans()
                Return intRows
            Catch err As Exception
                .mobjSCGLSql.SQLRollbackTrans()
                Throw RaiseSysErr(err, CLASS_NAME & ".ProcessRtn_CODE")
            Finally
                .mobjSCGLSql.SQLDisconnect()
                mobjceSC_CODE.Dispose()
            End Try
        End With
    End Function
