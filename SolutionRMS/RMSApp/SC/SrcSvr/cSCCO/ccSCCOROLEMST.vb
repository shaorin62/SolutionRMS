    ''============== ProcessRtn 사용자 권한설정 저장
    Public Function ProcessRtn(ByVal strInfoXML As String, _
                               ByVal vntData As Object, _
                               ByVal strUSERID As String) As Object '데이터 INSERT/UPDATE
        Dim intRtn As Integer
        Dim i, intColCnt, intRows As Integer
        Dim strPROGRAMID As String
        Dim intCnt As String
        SetConfig(strInfoXML)
        With mobjSCGLConfig
            Try
                .mobjSCGLSql.SQLConnect(.DBConnStr)
                .mobjSCGLSql.SQLBeginTrans()
                If IsArray(vntData) Then
                    '''사용할 Entity 개체생성(Config 정보를 넘겨생성)
                    mobjceSC_ROLE_MST = New ceSC_ROLE_MST(mobjSCGLConfig)
                    '''vntData의 컬럼수, 로우수를 변수입력
                    '변경이 불가능 하므로 우선 삭제 한다.
                    intColCnt = UBound(vntData, 1) : intRows = UBound(vntData, 2)

                    For i = 1 To intRows
                        strPROGRAMID = GetElement(vntData, "PROGRAMID", intColCnt, i, OPTIONAL_STR)
                        If GetElement(vntData, "USEYN", intColCnt, i, OPTIONAL_STR) = "1" Then
                            intCnt = SelectRtn_BL(strUSERID, strPROGRAMID)
                            If intCnt = "0" Then
                                intRtn = InsertRtn(vntData, intColCnt, i, strUSERID)
                            End If
                        Else
                            intRtn = mobjceSC_ROLE_MST.Delete(strUSERID, strPROGRAMID)
                        End If
                    Next

                End If
                .mobjSCGLSql.SQLCommitTrans()
                Return intRows
            Catch err As Exception
                .mobjSCGLSql.SQLRollbackTrans()
                Throw RaiseSysErr(err, CLASS_NAME & ".ProcessRtn")
            Finally
                .mobjSCGLSql.SQLDisconnect()
                mobjceSC_ROLE_MST.Dispose()
            End Try
        End With
    End Function



