	.sprSht.maxrows = 0
	
	.txtYEARMON.value = Mid(gNowDate,1,4) & Mid(gNowDate,6,2)
	End with
End Sub

Sub SelectRtn ()
   	Dim vntData
   	Dim i, strCols
    Dim strCHK
	On error resume next
	with frmThis
		'Long Type의 ByRef 변수의 초기화
		mlngRowCnt=clng(0)
		mlngColCnt=clng(0)
		
		If .txtYEARMON.value = "" Then
			gErrorMsgBox "년월은 반드시 기입 하셔야 합니다.","조회안내!"
			.txtYEARMON.focus()
			Exit Sub
		Elseif Len(.txtYEARMON.value) <> 6  Then
			gErrorMsgBox "년월의 입력형식이 다릅니다.","조회안내!"
			.txtYEARMON.value = ""
			.txtYEARMON.focus()
			Exit Sub
		End If
				
		vntData = mobjMDETEXRATE.SelectRtn(gstrConfigXml,mlngRowCnt,mlngColCnt,.txtYEARMON.value,.txtEXCLIENTCODE.value,.txtEXCLIENTNAME.value  )

		if not gDoErrorRtn ("SelectRtn") then
			if mlngRowCnt > 0 Then
				mobjSCGLSpr.SetClipbinding .sprSht, vntData, 1, 1, mlngColCnt, mlngRowCnt, True
   			Else
   			initpageData
   			end If
   			gWriteText lblStatus, mlngRowCnt & "건의 자료가 검색" & mePROC_DONE
   		end if
   	end with
End Sub


