'저장로직

Sub ProcessRtn()
	Dim intRtn
   	dim vntData
   	Dim intCnt
	with frmThis
   		'데이터 Validation
		'if DataValidation =false then exit sub
		'On error resume next
		'쉬트의 변경된 데이터만 가져온다.
		
		
		For intCnt = 1 To .sprSht.MaxRows 
			mobjSCGLSpr.SetTextBinding .sprSht,"SAVEFLAG",intCnt, "T"	
			sprSht_Change 6,intCnt
		Next
		
		vntData = mobjSCGLSpr.GetDataRows(.sprSht,"YEARMON|EXCLIENTCODE|EXCLIENTNAME|RATE|BIGO|SAVEFLAG|GUBN")
		
		if  not IsArray(vntData) then 
			gErrorMsgBox "변경된 " & meNO_DATA,"저장안내"
			exit sub
		End If
		'처리 업무객체 호출
		intRtn = mobjMDETEXRATE.ProcessRtn(gstrConfigXml,vntData)
		
		if not gDoErrorRtn ("ProcessRtn") then
			'모든 플래그 클리어
			mobjSCGLSpr.SetFlag  .sprSht,meCLS_FLAG
			if intRtn > 1 Then
			gErrorMsgBox "저장되었습니다.","저장안내"
			End If
			SelectRtn
   		end if
   	end with
End Sub


